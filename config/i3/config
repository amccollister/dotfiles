# win key is mod
set $mod Mod4

# set default font and disable mouse focus
font pango:monospace 8
focus_follows_mouse no

# setup gaps + workspace specific (side monitor)
for_window [class=".*"] border pixel 0
gaps inner 25
gaps bottom 40
workspace $ws3 gaps bottom 0

# start a terminal
bindsym $mod+Return exec kitty
bindsym $mod+Escape nop kitti3

# setup monitors, workspaces and mouse speed with xrandr (double check the actual mouse section; a kernel update messed up the mouse speed)
exec --no-startup-id xrandr --output DisplayPort-0 --mode 2560x1440 --rate 144 --output HDMI-A-0 --mode 1920x1080 --rate 60 --right-of DisplayPort-0
exec --no-startup-id xinput --set-prop "Logitech G502 HERO SE" "libinput Accel Speed" -1
exec --no-startup-id xinput --set-prop "Glorious Model O" "libinput Accel Speed" -1
workspace 1 output DisplayPort-0
workspace 2 output DisplayPort-0
workspace 3 output HDMI-A-0

# setup wallpaper
exec_always ~/.config/i3/wall/set_wal.sh ~/downloads/wallpapers/mystic_lake.jpg

# start programs
exec --no-startup-id easyeffects --gapplication-service
exec --no-startup-id i3-msg 'workspace 1; exec firefox'
exec --no-startup-id i3-msg 'workspace 2; exec steam'
exec --no-startup-id i3-msg 'workspace 3; exec discord --ignore-gpu-blocklist --disable-features=UseOzonePlatform --enable-features=VaapiVideoDecoder --use-gl=desktop --enable-gpu-rasterization --enable-zero-copy'
exec --no-startup-id picom -b --experimental-backends
exec --no-startup-id redshift -l manual
exec_always kitti3 -s 0.4 0.5 &
exec --no-startup-id nextcloud --background &

# temporary pipewire fix for 0.3.33
# should be fixed in pipewire 0.3.34 fingers crossed
# https://www.reddit.com/r/archlinux/comments/ozcxpa/pipewire_how_to_set_default_sink_persistently/
# exec_always --no-startup-id ~/scripts/pw_defaults.sh

# Take a screenshot | Proud of my self on figuring this one out! :)
bindsym Print --release exec "import png:- | xclip -selection clipboard -t image/png"

# Use loginctl lock-session or $mod+l to lock the system
exec --no-startup-id xss-lock --transfer-sleep-lock -- betterlockscreen -l --nofork
bindsym $mod+l exec betterlockscreen -l

# kill focused window
bindsym $mod+Shift+q kill

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal/veritcal orientation
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+e layout toggle split

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+Shift+f floating toggle

# hold $mod to drag a floating window
floating_modifier $mod

# pop-ups should be floating
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [class="obs"] floating enable
for_window [class="mpv"] floating enable
for_window [class="chatterino"] floating enable
for_window [class="Lutris"] floating enable

# Steam Classification taken from https://github.com/z3ntu/dotfiles/blob/fb3f5a25205b45234bdba8da7b19d63cd0d3db25/i3/.config/i3/config#L55
# Steam friend chat windows just have the name. Thus, added floating for all Steam titles except main window.
# Testing this for a few weeks. If effective, remove all other comments and just keep the two.

for_window [class="Steam" title=".*"] floating enable
for_window [class="Steam" title="^Steam$"] floating disable
#for_window [class="Steam" title=".* - Chat"] floating enable
#for_window [class="Steam" title="Settings"] floating enable
#for_window [class="Steam" title=".* - event started"] floating enable
#for_window [class="Steam" title=".* CD key"] floating enable
#for_window [class="Steam" title="Steam - Self Updater"] floating enable
#for_window [class="Steam" title="Screenshot Uploader"] floating enable
#for_window [class="Steam" title="Steam Guard - Computer Authorization Required"] floating enable
#for_window [class="Steam" title="Friends*"] floating enable
#for_window [title="Steam Keyboard"] floating enable

# make sure startup programs are assigned correctly
for_window [class="firefox"] move container to workspace 1
for_window [class="Steam"] move container to workspace 2
for_window [class="discord"] move container to workspace 3


# defining workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

# defining workspace keybinds
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9

# config for reload, reset, and exit
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left/right will adjust the window’s width.
        # Pressing up/down will adjust the window’s height.
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

# start polybar
exec_always --no-startup-id ~/.config/polybar/colorblocks/launch.sh
# exec --no-startup-id python ~/.config/polybar/scripts/scroll_text.py ~/.config/polybar/scripts/song.txt
# exec --no-startup-id echo " OFFLINE " > ~/.config/polybar/scripts/song.txt
bindsym $mod+d exec ~/.config/polybar/colorblocks/scripts/launcher.sh
bindsym Mod1+Tab exec ~/.config/polybar/colorblocks/scripts/window_choose.sh
