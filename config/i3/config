# win key is mod
set $mod Mod4

# set default font and disable mouse focus
font pango:monospace 8
focus_follows_mouse no

# setup gaps (inner only)
for_window [class=".*"] border pixel 0
gaps inner 20
gaps outer -20
smart_gaps on

# start a terminal
# TODO: Configure tdrop
bindsym $mod+Return exec kitty
bindsym $mod+Escape nop kitti3

# setup monitors, workspaces and mouse speed with xrandr (double check the actual mouse section; a kernel update messed up the mouse speed)
exec --no-startup-id xrandr --output DP-0 --primary --mode 2560x1440 --rate 144 --pos 0x0 --rotate normal --output DP-4 --rate 144 --mode 2560x1440 --pos 2560x0 --rotate normal

#exec --no-startup-id xinput --set-prop "Logitech G502 HERO SE" "libinput Accel Speed" -1
#exec --no-startup-id xinput --set-prop "Glorious Model O" "libinput Accel Speed" -1
#exec --no-startup-id xinput --set-prop "SteelSeries SteelSeries Rival 3 Wireless" "libinput Accel Speed" -1
# See /etc/X11/xorg.conf.d/50-mouse-acceleration.conf
# TODO: Configure libinput Accel Speed to be set to -1 for all inputs at all times
exec --no-startup-id xinput --set-prop "Logitech USB Receiver" "libinput Accel Speed" -1
exec --no-startup-id xinput --set-prop "pointer:Logitech G Pro " "libinput Accel Speed" -1

workspace 1 output DP-0
workspace 2 output DP-0
workspace 3 output DP-4
workspace 4 output DP-4
workspace 5 output DP-4

# setup wallpaper
exec_always ~/.config/i3/wall/set_wal.sh ~/downloads/wallpapers/outer_wilds_outro.png

# start programs
exec --no-startup-id i3-msg 'workspace 1; exec "sleep 1; firefox"'
exec --no-startup-id i3-msg 'workspace 2; exec steam'
exec --no-startup-id i3-msg 'workspace 3; exec "sleep 1; discord --ignore-gpu-blocklist --disable-features=UseOzonePlatform --enable-features=VaapiVideoDecoder --use-gl=desktop --enable-gpu-rasterization --enable-zero-copy"'
exec --no-startup-id i3-msg 'workspace 3; exec "sleep 3; spotify-launcher"'
exec --no-startup-id i3-msg 'workspace 4; exec obsidian'

# Startup background applications
exec_always --no-startup-id kitti3 -s 0.5 0.5 &
exec --no-startup-id redshift -l manual
exec --no-startup-id "sh -c 'sleep 5; easyeffects --gapplication-service'"
# exec --no-startup-id nextcloud --background &
# exec --no-startup-id picom -b
# bindsym $mod+Shift+s --release exec "flameshot gui -c"
bindsym $mod+Shift+s --release exec "import png:- | xclip -selection clipboard -t image/png"

# Start barrier for work
exec --no-startup-id "barriers --no-tray --name arch --disable-crypto --disable-client-cert-checking -c /opt/barrier.conf --address :24800"

# kill focused window
bindsym $mod+Shift+q kill

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal/veritcal orientation
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+e layout toggle split

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+Shift+f floating toggle

# hold $mod to drag a floating window
floating_modifier $mod

# pop-ups and edge cases should be floating
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [class="Thunar"] floating enable
for_window [class="obs"] floating enable
for_window [class="kitty"] floating enable
for_window [class="mpv"] floating enable
for_window [class="chatterino"] floating enable
for_window [class="Lutris"] floating enable
for_window [class="Nextcloud"] floating enable

# don't float obsidian
for_window [class="obsidian"] floating disable

# Steam Classification taken from https://github.com/z3ntu/dotfiles/blob/fb3f5a25205b45234bdba8da7b19d63cd0d3db25/i3/.config/i3/config#L55
# Steam friend chat windows just have the name. Thus, added floating for all Steam titles except main window.
for_window [class="Steam" title=".*"] floating enable
for_window [class="Steam" title="^Steam$"] floating disable
for_window [class="steam" title=".*"] floating enable
for_window [class="steam" title="^Steam$"] floating disable

# make sure startup programs are assigned correctly
for_window [class="firefox"] move container to workspace 1

# New Steam
for_window [class="steam"] move container to workspace 2
for_window [class="Steam"] move container to workspace 2
for_window [class="steamwebhelper"] move container to workspace 2

for_window [class="discord"] move container to workspace 3
for_window [class="Spotify"] move container to workspace 3
for_window [class="obsidian"] move container to workspace 4


# defining workspaces
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9

# defining workspace keybinds
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9

# config for reload, reset, and exit
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# start polybar + scripts
exec_always --no-startup-id ~/.config/polybar/hack/launch.sh
# exec --no-startup-id python ~/.config/polybar/scripts/scroll_text.py ~/.config/polybar/scripts/song.txt
# exec --no-startup-id echo " OFFLINE " > ~/.config/polybar/scripts/song.txt
bindsym $mod+d exec ~/.config/polybar/hack/scripts/launcher.sh
bindsym Mod1+Tab exec ~/.config/polybar/hack/scripts/window_choose.sh

